    <div><%= image_tag url_for(@book.image) %></div>
    <div>Title: <%= @book.title %></div>
    <div>Author: <%= @book.author %></div>
    <div>
      Comments: <% @book.comments.each do |comment| %>
        <ul>
          <li>
            <%= comment.text %>
            <%= link_to 'Edit Comment', edit_comment_path(comment) %>
            <%= link_to 'Delete Comment', comment_path(comment), method: 'delete' %>
          </li>
        </ul>
      <% end %>
      <% if current_user %>
        <div><%= link_to 'Create new Comment', new_comment_path(book: @book) %></div>
        <div><%= link_to 'Edit Book', edit_book_path(@book) %></div>
        <div><%= link_to 'Delete Book', book_path(@book), method: 'delete' %></div>
      <% end %>
    </div>